        $(".form-btns .save-btn").on("click", function(e){
            e.preventDefault();
            if($(".nav-box .login").text().includes("로그인")){
                alert("로그인이 필요한 기능입니다. \n로그인하지 않고 공유하려면 주소창을 복사하세요.");
                return;
            }
            // 편성 상태
            let form_status = $(".formmake-topcontainer .form-title .form-status button p");
            $(".preview-detail-container .form-title .form-status button p").text(form_status.text());
            if(form_status.parent().hasClass("btn-blue")) $(".preview-detail-container .form-title .form-status button").removeClass("status-request").addClass("status-share");
            else $(".preview-detail-container .form-title .form-status button").removeClass("status-share").addClass("status-request");

            if(form_status.text().includes("요청") ){
                $(".save-check .form-status-check .msg").text("현재 편성이 편성 요청 전용 게시판에 올라갑니다. 공개 여부를 선택할 수 없습니다.")
                $(".save-check .form-status-check input[value='public']").prop("checked", true);
                $(".save-check .form-status-check input[name='access']").prop("disabled", true);
            }

            NowFormHeroes.addHeroesInPreview();

            // 작성자
            $(".preview-detail-container .form-author span").text($(".formmake-topcontainer .form-author span").text())
            // 컨텐츠
            $(".preview-detail-container .form-title .content-name p").text($(".formmake-topcontainer .form-title .content-name p").text())

            // 작성자 한마디
            $(".preview-detail-container .memo").text($(".formmake-topcontainer .memo").val())

            // 나의 영웅들 공개하기
            let myhero_access = $(".form-container .left-box-bottom .charPublic-checkbox").is(":checked");
            $(".save-check .myhero-access .charPublic-checkbox").prop("checked", myhero_access);
            // $(".save-check .myhero-access .charPublic-checkbox").prop("disabled", true);

            if(!myhero_access) {
                $(".myhero-access .msg").text("현재 작성자의 영웅 육성 상황이 공개되지 않습니다.")
                $(".preview-detail-container .select-liner span").addClass("invisible");
                $(".preview-detail-container .select-liner img").removeClass("nothave");
            }

            // 저장 일시
            LastDatetime.init()
            $(".preview-detail .form-detail-date").text(LastDatetime.dateFormating());


            $(".my-modal-bg").fadeIn();
            $(".preview-detail-container").fadeIn();
        })

        $(".save-check .form-status-check input[name='access']").on("change", function(){
            // if($(".form-title .form-status button p").text().includes("요청")) return false;
            if($(".save-check .form-status-check input[name='access']:checked").val() == "public"){
                $(".save-check .form-status-check .msg").text("현재 편성이 공개 상태로 게시판에 올라갑니다. 누구나 게시판을 통해 볼 수 있습니다.")
                $(".preview-detail-container .content-name i").addClass("invisible")
            } else{
                $(".save-check .form-status-check .msg").text("현재 편성이 마이페이지에 저장됩니다. 편성을 저장한 현재 작성자가 아니면 아무도 편성을 볼 수 없습니다.")
                $(".preview-detail-container .content-name i").removeClass("invisible")
            }   
            
        })

        $(".preview-detail-container .myhero-access .charPublic-checkbox").on("change", function(e){
