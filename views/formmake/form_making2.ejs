        $(".preview-detail-container .upload-btn").on("click", function(e){
            e.preventDefault();
            
            var newForm = $('<form></form>');
            newForm.attr("method","post");
            newForm.attr("action",`${window.location.pathname}/postform`);
            
            
            // 편성 상태 (공유,요청 / 공개,비공개)
            newForm.append(`<input name="form_status" type="hidden" value="${$(".preview-detail-container  .form-status button p").text()}">`);
