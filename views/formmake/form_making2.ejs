            // 컨텐츠 이름
            newForm.append(`<input name="content_name" type="hidden" value="${$(".preview-detail-container .content-name button p").text()}">`);

            // 편성 칸 정보
            for(let i=0; i<NowFormHeroes.getter().length; i++){
                newForm.append(`<input name="hero" type="hidden" value="${NowFormHeroes.getter()[i]}">`);
            }
            // 나의 영웅들 공개하기 여부
            newForm.append(`<input name="myhero_access" type="hidden" value="${$(".preview-detail-container  .myhero-access .charPublic-checkbox").is(":checked")}">`);

            // 작성자 한마디
            newForm.append(`<input name="writer_memo" type="hidden" value="${$(".preview-detail-container .memo-container .memo").text()}">`);


            // 저장 일시
            newForm.append(`<input name="last_datetime" type="hidden" value="${LastDatetime.dateFormating()}">`);

            newForm.appendTo('body');
            newForm.submit();
        })

        $(document).on('click', function(e){
            // 빈 곳 클릭하면 영웅 설정 꺼짐
            if(!$(e.target).closest(".hero-setting").length>0
